---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Message Sent | Hareem Aqdas">
  <section class="min-h-[60vh] flex flex-col items-center justify-center px-6 text-center">
    <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mb-6">
      <i data-feather="check"></i>
    </div>
    <h1 class="text-3xl font-bold mb-4">Message Sent!</h1>
    <p class="text-xl text-gray-600 mb-8">Thank you for reaching out. I'll get back to you shortly.</p>
    <a href="/" class="px-6 py-3 bg-black text-white rounded-md hover:bg-gray-800 transition duration-200">Return Home</a>
  </section>
</Layout>
